---
import type { Link } from '@data'
import { Image } from 'astro:assets'

const { name, description, url, icon, tags } = Astro.props as Link
---

<div class="my-4">
  <a href={url}>
    <div class="card border-2 border-base-content bg-base-300 p-2 shadow-xl md:p-4">
      <p class="mb-2 flex">
        <Image src={icon} alt="icon" width="32" height="32" class="mr-2 h-6 w-6" />
        <span class="text-xl font-bold">{name}</span>
      </p>
      <span>{description}</span>
      <div class="mt-2">
        {
          tags.map((tag) => (
            <a href={tag.url} class="badge badge-secondary mr-2 mt-2 duration-200 md:hover:scale-110">
              {tag.name}
            </a>
          ))
        }
      </div>
    </div>
  </a>
</div>
