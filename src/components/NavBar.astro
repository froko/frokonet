---
import { CloseIcon, HamburgerIcon } from '@components'
import { nav } from '@data'
---

<nav class="navbar sticky top-0 z-10 bg-opacity-20 backdrop-blur-lg">
  <div class="flex-1">
    <a href={Astro.site} class="text-xl font-bold md:ml-2 md:text-2xl">{Astro.url.hostname}</a>
  </div>
  <div class="absolute right-4">
    <div class="drawer drawer-end">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />

      <label class="btn btn-circle swap swap-rotate z-10" for="my-drawer">
        <HamburgerIcon />
        <CloseIcon />
      </label>

      <div class="drawer-side">
        <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu min-h-full min-w-fit bg-base-200 bg-opacity-80 p-4 pt-20 text-2xl font-bold">
          {
            nav.map((item) => (
              <li class="mt-8">
                <a href={item.slug}>{item.title}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</nav>
